AT_BANNER([RPM install tests])

# ------------------------------
# Check if rpm -U *.src.rpm works
AT_SETUP([rpm --nosignature -U *.src.rpm succeds for UNSIGNED])
AT_KEYWORDS([install])
AT_CHECK([
rm -rf ${TOPDIR}

run rpm \
  --nosignature \
  -U "${abs_srcdir}"/data/SRPMS/hello-1.0-1.src.rpm
],
[0],
[ignore],
[ignore])
AT_CLEANUP

# ------------------------------
# Check if rpm -U *.src.rpm fails for unsigned rpms
AT_SETUP([rpm -U *.src.rpm fails because UNSIGNED srpm])
AT_KEYWORDS([install unsigned])
AT_CHECK([
rm -rf ${TOPDIR}

tpkg="hello-1.0-1.src.rpm"
cp "${RPMDATA}/SRPMS/${tpkg}" .

run rpm \
  -U "${tpkg}"
],
[1],
[],
[error: hello-1.0-1.src.rpm: Header SHA1 digest: OK (ce6c408c1a30f21214370092f7db0c8f9fe3da79) UNSIGNED
error: hello-1.0-1.src.rpm cannot be installed (insecure)
])
AT_CLEANUP

# ------------------------------
# Check if rpm -i *.src.rpm works
AT_SETUP([rpm -i *.src.rpm])
AT_KEYWORDS([install])
AT_CHECK([
rm -rf ${TOPDIR}

run rpm \
  --nosignature \
  -i "${abs_srcdir}"/data/SRPMS/hello-1.0-1.src.rpm
],
[0],
[ignore],
[ignore])
AT_CLEANUP

# ------------------------------
# Various error behavior tests
#
AT_SETUP([rpm -i <nonexistent file>])
AT_KEYWORDS([install])
AT_CHECK([
run rpm \
  -i no_such_file
],
[1],
[ignore],
[ignore])
AT_CLEANUP

# XXX hmm, --nomanifest seems broken atm...
AT_SETUP([rpm -i --nomanifest <garbage text file>])
AT_KEYWORDS([install])
AT_CHECK([
junk="${RPMTEST}/textfile"
cat << EOF > "${junk}"
no_such.file
not_an.rpm
EOF

run rpm \
  -Uvv --nomanifest "${junk}"
],
[1],
[ignore],
[ignore])
AT_CLEANUP

AT_SETUP([rpm -i <garbage text file])
AT_KEYWORDS([install])
AT_CHECK([
junk="${RPMTEST}/not_an.rpm"
cat << EOF > "${junk}"
no_such.file
not_an.rpm
EOF

run rpm \
  -Uvv "${junk}"
],
[2],
[ignore],
[ignore])
AT_CLEANUP
